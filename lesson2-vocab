<script>
(function(){
  const KEY = {
    q1: 'Microorganisms', q2: 'Eukarya', q3: 'Protists', q4: 'Prokaryotes', q5: 'Eukaryotes',
    q6: 'Autotrophs', q7: 'Heterotrophs', q8: 'Decomposers', q9: 'Archaea', q10: 'Bacteria',
    q11: 'Virus', q12: 'Host', q13: 'Bacteriophage', q14: 'Nanometers', q15: 'Genetic material',
    q16: 'Ebola', q17: 'Vaccine', q18: 'Epidemic', q19: 'Bacteria', q20: 'Cytoplasm',
    q21: 'Ribosomes', q22: 'Flagella', q23: 'Pili', q24: 'Binary fission', q25: 'Conjugation',
    q26: 'Endospore', q27: 'Toxins', q28: 'Resistant'
  };

  const gradeBtn = document.getElementById('gradeBtn');
  const resetBtn = document.getElementById('resetBtn');
  const showKeyBtn = document.getElementById('showKeyBtn');
  const results = document.getElementById('results');
  const keyBox = document.getElementById('key');

  function grade(){
    results.innerHTML = '';
    let total = Object.keys(KEY).length;
    let correct = 0;
    const details = document.createElement('div');

    for (let i = 1; i <= total; i++){
      const id = 'q' + i;
      const el = document.getElementById(id);
      const val = el ? el.value : '';
      const isCorrect = val === KEY[id];
      if (isCorrect) correct++;
      const row = document.createElement('div');
      row.className = 'result ' + (isCorrect ? 'correct' : 'incorrect');
      row.style.marginBottom = '6px';
      row.innerHTML = '<strong>Blank '+i+':</strong> ' + (isCorrect ? ('Correct — ' + val) : ('Incorrect — you chose "' + (val || 'nothing') + '". Correct: ' + KEY[id])) +
        '<div class="small" style="margin-top:6px;color:#475569;">';
      // short explanations for a few items to reinforce learning
      if (id === 'q4') row.innerHTML += ' Prokaryotes are cells without a nucleus.';
      if (id === 'q11') row.innerHTML += ' Viruses are nonliving and must use a host cell.';
      if (id === 'q24') row.innerHTML += ' Binary fission is how many bacteria reproduce asexually.';
      row.innerHTML += '</div>';
      details.appendChild(row);
    }

    const percent = Math.round((correct/total)*100);
    const summary = document.createElement('div');
    summary.className = 'result ' + (percent >= 70 ? 'correct' : 'incorrect');
    summary.innerHTML = '<div class="score">Score: ' + correct + ' / ' + total + ' (' + percent + '%)</div>' +
      '<div class="small" style="margin-top:6px;">' + (percent >= 70 ? 'Nice work! Review any red items above.' : 'Keep practicing — review incorrect answers and try again.') + '</div>';
    results.appendChild(summary);
    results.appendChild(details);
    summary.scrollIntoView({behavior:'smooth'});
  }

  gradeBtn.addEventListener('click', grade);

  resetBtn.addEventListener('click', function(){
    for (let i = 1; i <= 28; i++){
      const el = document.getElementById('q' + i);
      if (el) el.selectedIndex = 0;
    }
    results.innerHTML = '';
    keyBox.style.display = 'none';
  });

  showKeyBtn.addEventListener('click', function(){
    keyBox.style.display = keyBox.style.display === 'none' ? 'block' : 'none';
    keyBox.scrollIntoView({behavior:'smooth'});
  });
})();
</script>
</body>
